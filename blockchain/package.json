{
  "name": "strava-segments-to-nfts-smart-contracts",
  "version": "0.0.1",
  "description": "Generate an NFT for each new unique segment a Strava user runs through - Smart contracts part",
  "repository": "git@github.com:alainncls/strava-segments-to-nfts.git",
  "license": "ISC",
  "author": "Alain Nicolas",
  "main": "truffle.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "truffle build",
    "postbuild": "npm run types",
    "migrate": "truffle migrate --reset",
    "postmigrate": "npm run types",
    "test": "truffle test",
    "types": "npm run types:build && npm run types:move",
    "types:build": "npx typechain --target ethers-v5 blockchain/build/contracts/*",
    "types:move": "rm -rf ../src/config/types && mv types ../src/config"
  },
  "devDependencies": {
    "@openzeppelin/contracts": "^4.5.0",
    "@typechain/ethers-v5": "^10.0.0",
    "chai": "^4.3.6",
    "coveralls": "^3.1.1",
    "solidity-coverage": "0.7.19",
    "truffle": "^5.5.6",
    "truffle-assertions": "^0.9.2",
    "typechain": "^8.0.0"
  }
}
